<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgViewCover"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/Prograss_load_photo"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/imgViewCover"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:text="A Rainy Day in New York"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:text="⭐️7.7"
            android:padding="2dp"
            android:background="#2196F3"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            />



        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="match_parent"
            android:text="Queen Poppy and Branch make a surprising discovery — there are other Troll worlds beyond their own, and their distinct differences create big clashes between these various tribes. When a mysterious threat puts all of the Trolls across the land in danger, Poppy, Branch, and their band of friends must embark on an epic quest to create harmony among the feuding Trolls to unite them against certain doom."
            android:ellipsize="end"
            android:maxLines="8"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>



    <FrameLayout
        android:id="@+id/layoutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/imgViewCover"
        android:background="@drawable/round_white"
        android:layout_marginStart="3dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ic_date"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_date" />

        <TextView
            android:id="@+id/publishAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:text="19 january 2019" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layoutDate"
        android:layout_marginTop="5dp"
        android:background="#B3B3B3"
        />



</RelativeLayout>